# Just file: https://github.com/casey/just
build:
    mkdir -p debug
    cd debug && cmake \
        -DCMAKE_BUILD_TYPE=Debug \
        -DCMAKE_EXPORT_COMPILE_COMMANDS=YES \
        -G Ninja  \
        -DCMAKE_CXX_FLAGS=-fdiagnostics-color \
        -DCMAKE_C_FLAGS=-fdiagnostics-color \
        ..
    cd debug && cmake --build . -- -j8
    rm -f compile_commands.json
    ln -s debug/compile_commands.json

run: build
    debug/pystencils_gui
    
release:
    mkdir -p release
    cd release && cmake \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_EXPORT_COMPILE_COMMANDS=YES \
        -G Ninja  \
        -DCMAKE_CXX_FLAGS=-fdiagnostics-color \
        -DCMAKE_C_FLAGS=-fdiagnostics-color \
        ..
    cd release && cmake --build . -- -j8

release-run: release
    release/pystencils_gui

install: release
    cd release && sudo ninja install

clean:
	rm -rf debug
	rm -rf release

clean-build: clean build
